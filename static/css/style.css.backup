/* Modern Variables */
:root {
    /* Updated modern color palette - more refined and cohesive */
    --primary-color: #3b5bd9; /* Slightly muted from original #4361ee */
    --primary-light: #5d78e6; /* Adjusted to match new primary */
    --primary-dark: #2a48b8; /* Deeper, more sophisticated */
    --primary-lightest: #eef1fd;
    --primary-lighter: #d8e0fa;
    
    --secondary-color: #5f58e5; /* More harmonious with primary */
    --secondary-light: #8a85f0; /* Less saturated */
    --secondary-dark: #4740c8; /* Deeper tone */
    
    --accent-color: #e63c7b; /* Less saturated from #f72585 */
    --accent-light: #f06a9e; /* Softer tone */
    --accent-dark: #c42e69; /* Richer dark accent */
    
    --success-color: #0ca678; /* Slightly muted green */
    --warning-color: #f59f0b; /* Warmer amber */
    --danger-color: #e03131; /* Less harsh red */
    --info-color: #339af0; /* Softer blue */
    
    /* Improved neutral colors */
    --bg-color: #f8f9fb; /* Lighter, airier background */
    --sidebar-bg: #1a2130; /* Darker for better contrast */
    --sidebar-hover: #2a3241; /* More subtle hover state */
    --sidebar-active: #343e50; /* More cohesive active state */
    --card-bg: #ffffff;
    --card-bg-dark: #f0f4f8; /* Softer tone */
    
    --text-dark: #1a243b; /* Deeper, more readable */
    --text-medium: #596680; /* Better midtone */
    --text-light: #8896b0; /* Less harsh light text */
    --text-sidebar: #d0d9e8; /* Brighter sidebar text */
    
    --border-light: #e9eef6; /* Softer borders */
    --border-medium: #d3dce9;
    
    /* Enhanced UI elements */
    --radius-sm: 4px;
    --radius-md: 8px; /* Slightly increased */
    --radius-lg: 12px; /* Slightly increased */
    --radius-xl: 18px; /* Slightly increased */
    
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 4px 8px rgba(0, 0, 0, 0.05), 0 1px 3px rgba(0, 0, 0, 0.05);
    --shadow-lg: 0 10px 20px -3px rgba(0, 0, 0, 0.06), 0 4px 6px -2px rgba(0, 0, 0, 0.03);
    
    /* Typography variables */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    --font-size-xs: 0.75rem;   /* 12px */
    --font-size-sm: 0.875rem;  /* 14px */
    --font-size-base: 1rem;    /* 16px */
    --font-size-md: 1.125rem;  /* 18px */
    --font-size-lg: 1.25rem;   /* 20px */
    --font-size-xl: 1.5rem;    /* 24px */
    --font-size-2xl: 1.875rem; /* 30px */
    
    --line-height-tight: 1.2;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.75;
}

/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
    line-height: var(--line-height-normal);
    color: var(--text-dark);
    background-color: var(--bg-color);
    min-height: 100vh;
    font-weight: var(--font-weight-normal);
    font-size: var(--font-size-base);
}

/* Dashboard Layout */
.dashboard-container {
    display: grid;
    grid-template-columns: 260px 1fr; /* Slightly reduced sidebar width */
    min-height: 100vh;
    position: relative;
}

.dashboard-sidebar {
    background-color: var(--sidebar-bg);
    color: var(--text-sidebar);
    padding: 2rem 0;
    overflow-y: auto;
    position: fixed;
    width: 260px; /* Match the grid column */
    height: 100vh;
    transition: transform 0.3s ease, background-color 0.3s ease;
    z-index: 100;
}

.dashboard-main {
    grid-column: 2;
    padding: 0;
    background-color: var(--bg-color);
    min-height: 100vh;
}

/* Sidebar Styles */
.sidebar-header {
    padding: 0 1.5rem 2rem 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* More subtle separator */
}

.sidebar-header h1 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: white;
    letter-spacing: -0.01em; /* Slightly tighter heading */
}

.app-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
    border-radius: 8px;
    color: white;
}

.sidebar-nav {
    padding: 1.5rem 0;
}

.sidebar-nav ul {
    list-style: none;
}

.sidebar-nav li {
    margin-bottom: 0.5rem;
}

.sidebar-nav a {
    display: flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    color: var(--text-sidebar);
    text-decoration: none;
    transition: all 0.2s ease;
    border-left: 3px solid transparent;
    font-weight: var(--font-weight-medium);
}

.sidebar-nav a:hover {
    background-color: var(--sidebar-hover);
    color: white;
}

.sidebar-nav li.active a {
    background-color: var(--sidebar-active);
    color: white;
    border-left: 3px solid var(--primary-color);
}

.sidebar-nav i {
    width: 20px;
    margin-right: 0.75rem;
    font-size: 1.1rem;
}

/* Sidebar toggle for mobile */
.sidebar-collapsed .dashboard-sidebar {
    transform: translateX(-100%);
}

.sidebar-collapsed .dashboard-main {
    grid-column: 1 / -1;
}

/* Dashboard Header */
.dashboard-header {
    background-color: white;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--border-light);
    position: sticky;
    top: 0;
    z-index: 90;
    box-shadow: var(--shadow-sm);
}

.header-search {
    flex: 1;
    max-width: 500px;
}

.search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.search-input-wrapper input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    transition: all 0.2s ease;
    background-color: var(--bg-color);
}

.search-input-wrapper input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(59, 91, 217, 0.1);
    background-color: white;
}

.search-input-wrapper .search-icon {
    position: absolute;
    left: 0.75rem;
    color: var(--text-medium);
}

.search-input-wrapper button {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 0.75rem 1.25rem;
    border-radius: var(--radius-lg);
    margin-left: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
    font-weight: 500;
}

.search-input-wrapper button:hover {
    background-color: var(--primary-dark);
}

.header-actions {
    display: flex;
    align-items: center;
}

.header-action-btn {
    background: none;
    border: none;
    color: var(--text-medium);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius-md);
    transition: all 0.2s;
}

.header-action-btn:hover {
    background-color: var(--bg-color);
    color: var(--text-dark);
}

/* Dashboard Section Styles */
.dashboard-view {
    padding: 2rem;
    height: calc(100vh - 70px); /* Subtract header height */
    overflow-y: auto;
    display: none;
}

.dashboard-view.active-view {
    display: block;
}

.dashboard-section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    position: relative;
}

.dashboard-section-header::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(to right, var(--primary-light) 0%, transparent 100%);
}

.dashboard-section-header h2 {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    background: linear-gradient(135deg, var(--text-dark), var(--primary-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    letter-spacing: -0.02em;
}

.section-actions {
    display: flex;
    gap: 0.75rem;
}

/* Enhance section buttons */
.btn-secondary {
    background: var(--primary-gradient);
    border: none;
    color: white;
    box-shadow: 0 4px 8px rgba(74, 108, 247, 0.25);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(74, 108, 247, 0.35);
}

.btn-secondary.btn-sm {
    padding: 0.4rem 0.8rem;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
}

/* Enhanced no results styling */
.no-results {
    text-align: center;
    padding: 3rem;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    position: relative;
    overflow: hidden;
}

.no-results::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--primary-gradient);
}

.no-results-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    opacity: 0.8;
}

.no-results h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-dark);
    margin-bottom: 1rem;
}

.no-results p {
    color: var(--text-medium);
    max-width: 500px;
    margin: 0 auto 2rem;
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
}

.no-results .btn-primary {
    background: var(--primary-gradient);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: var(--font-weight-medium);
    color: white;
    box-shadow: 0 4px 12px rgba(74, 108, 247, 0.3);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.no-results .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(74, 108, 247, 0.4);
}

/* Dashboard Stats */
.dashboard-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
}

.stat-card {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    font-size: 1.5rem;
    color: white;
}

.document-icon {
    background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
}

.storage-icon {
    background: linear-gradient(135deg, var(--secondary-light), var(--secondary-color));
}

.search-icon {
    background: linear-gradient(135deg, var(--accent-light), var(--accent-color));
}

.stat-info {
    display: flex;
    flex-direction: column;
}

.stat-value {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-dark);
    line-height: var(--line-height-tight);
}

.stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-medium);
    margin-top: 0.25rem;
}

/* Dashboard Cards */
.dashboard-content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1.5rem;
}

.dashboard-card {
    background-color: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border-light);
}

.card-header h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-dark);
}

.card-action-link {
    color: var(--primary-color);
    font-size: 0.9rem;
    text-decoration: none;
    font-weight: 500;
}

.card-action-link:hover {
    text-decoration: underline;
}

.card-content {
    padding: 1.5rem;
}

/* Recent Documents List */
.recent-docs-list {
    list-style: none;
}

.recent-doc-item {
    display: flex;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-light);
}

.recent-doc-item:last-child {
    border-bottom: none;
}

.doc-icon {
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--primary-lightest);
    color: var(--primary-color);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
}

.doc-info {
    flex: 1;
    overflow: hidden;
}

.doc-name {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-dark);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.doc-actions {
    display: flex;
    gap: 0.5rem;
}

.doc-action {
    color: var(--text-medium);
    background: none;
    border: none;
    padding: 0.25rem;
    font-size: 0.9rem;
    cursor: pointer;
    border-radius: var(--radius-sm);
    transition: all 0.2s;
}

.doc-action:hover {
    color: var(--primary-color);
    background-color: var(--primary-lightest);
}

.doc-action.delete-btn:hover {
    color: var(--danger-color);
    background-color: #fee2e2;
}

/* Documents View */
.documents-view-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.view-options {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--card-bg-dark);
    padding: 0.25rem;
    border-radius: var(--radius-md);
}

.view-option {
    background: none;
    border: none;
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-medium);
    transition: all 0.2s;
}

.view-option.active {
    background-color: white;
    color: var(--text-dark);
    box-shadow: var(--shadow-sm);
}

.documents-filter {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
}

.filter-input-wrapper {
    position: relative;
    width: 100%;
}

.filter-input-wrapper input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    font-size: 0.95rem;
    transition: all 0.2s;
}

.filter-input-wrapper input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
}

.filter-input-wrapper i {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-medium);
}

/* Documents Grid View */
.documents-grid-view {
    display: none;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.5rem;
}

.documents-grid-view.active-view {
    display: grid;
}

.document-card {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-light);
    transition: all 0.2s ease;
}

.document-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-lighter);
}

.document-select {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 2;
}

.document-thumbnail {
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--primary-lightest);
    color: var(--primary-color);
    font-size: 3rem;
    padding: 1rem;
}

.document-info {
    flex: 1;
    min-width: 0; /* Prevent overflow on small widths */
}

.document-name {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--text-dark);
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.document-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: var(--font-size-xs);
    color: var(--text-medium);
}

.document-actions {
    display: flex;
    gap: 0.5rem;
}

.document-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: var(--radius-md);
    color: var(--text-medium);
    background-color: var(--bg-color);
    border: 1px solid var(--border-light);
    transition: all 0.2s ease;
}

.document-action:hover {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.view-action:hover {
    background-color: var(--info-color);
    border-color: var(--info-color);
}

/* Documents List View */
.documents-list-view {
    display: none;
}

.documents-list-view.active-view {
    display: block;
}

.documents-table {
    width: 100%;
    border-collapse: collapse;
}

.documents-table th,
.documents-table td {
    padding: 0.75rem 1rem;
    text-align: left;
}

.documents-table th {
    background-color: var(--card-bg-dark);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-medium);
}

.documents-table tr {
    border-bottom: 1px solid var(--border-light);
}

.documents-table tbody tr:hover {
    background-color: var(--primary-lightest);
}

.documents-table tr:last-child {
    border-bottom: none;
}

.documents-table td {
    font-size: 0.95rem;
}

.documents-table .checkbox-cell {
    width: 40px;
}

.documents-table .actions-cell {
    width: 100px;
    text-align: right;
}

/* Upload View */
.upload-container {
    max-width: 800px;
    margin: 0 auto;
}

.file-drop-area {
    border: 2px dashed var(--border-medium);
    border-radius: var(--radius-lg);
    padding: 2rem;
    text-align: center;
    transition: all 0.3s;
    background: var(--primary-lightest);
    margin-bottom: 1.5rem;
    cursor: pointer;
}

.file-drop-area.large {
    padding: 3rem;
}

.file-drop-area.highlight {
    border-color: var(--primary-color);
    background: var(--primary-lighter);
}

.drop-area-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}

.drop-area-content i {
    font-size: 3rem;
    color: var(--primary-color);
}

.drop-area-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
}

.drop-area-content p {
    color: var(--text-medium);
}

.file-browse-btn {
    background-color: var(--primary-color);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.file-browse-btn:hover {
    background-color: var(--primary-dark);
}

input[type="file"] {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
}

.file-requirements {
    font-size: 0.85rem;
    color: var(--text-medium);
    margin-top: 1rem;
}

.selected-files {
    background: var(--card-bg);
    border-radius: var(--radius-md);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: var(--shadow-sm);
}

.selected-files.hidden {
    display: none;
}

.selected-files h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-dark);
}

.selected-files-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-sm);
}

.no-files-message {
    color: var(--text-medium);
    text-align: center;
    padding: 1.5rem;
}

.selected-file-item {
    padding: 0.75rem;
    border-bottom: 1px solid var(--border-light);
}

.selected-file-item:last-child {
    border-bottom: none;
}

.file-info {
    display: flex;
    flex-direction: column;
}

.file-name {
    font-size: 0.95rem;
    font-weight: 500;
}

.file-size {
    font-size: 0.85rem;
    color: var(--text-medium);
}

.remove-file {
    background: none;
    border: none;
    color: var(--danger-color);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: all 0.2s;
}

.remove-file:hover {
    background-color: #fee2e2;
}

.upload-actions {
    display: flex;
    gap: 1rem;
}

/* Search View */
.search-form-container {
    background-color: white;
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    max-width: 800px;
    margin: 0 auto;
}

.search-form .form-row {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-group {
    flex: 1;
}

.form-group.half {
    flex: 0.5;
}

.form-group label {
    display: block;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--text-dark);
}

.form-group input,
.form-group select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    font-size: 0.95rem;
    transition: all 0.2s;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
}

.form-group small {
    display: block;
    font-size: 0.8rem;
    color: var(--text-medium);
    margin-top: 0.25rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
}

/* Settings View */
.settings-container {
    max-width: 800px;
    margin: 0 auto;
}

.settings-card {
    background-color: white;
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    margin-bottom: 1.5rem;
}

.settings-card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-dark);
}

.settings-actions {
    margin-bottom: 1rem;
}

.settings-description {
    font-size: 0.95rem;
    color: var(--text-medium);
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    border: 1px solid transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
}

.btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 91, 217, 0.2);
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
}

.btn-secondary {
    background-color: var(--secondary-color);
    color: white;
    border-color: var(--secondary-color);
}

.btn-secondary:hover {
    background-color: var(--secondary-dark);
    border-color: var(--secondary-dark);
}

.btn-accent {
    background-color: var(--accent-color);
    color: white;
    border-color: var(--accent-color);
}

.btn-accent:hover {
    background-color: var(--accent-dark);
    border-color: var(--accent-dark);
}

.btn-outline {
    background-color: transparent;
    color: var(--text-dark);
    border-color: var(--border-medium);
}

.btn-outline:hover {
    background-color: var(--bg-color);
    border-color: var(--text-medium);
}

.btn-outline-primary {
    background-color: transparent;
    color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-outline-primary:hover {
    background-color: var(--primary-lightest);
}

.btn-sm {
    padding: 0.35rem 0.75rem;
    font-size: var(--font-size-xs);
}

.btn-lg {
    padding: 0.75rem 1.5rem;
    font-size: var(--font-size-base);
}

.btn-icon {
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    border-radius: var(--radius-md);
}

.btn-icon.btn-sm {
    width: 2rem;
    height: 2rem;
}

.btn-icon.btn-lg {
    width: 3rem;
    height: 3rem;
}

/* Flash Messages */
.flash-messages {
    padding: 1rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.message {
    display: flex;
    align-items: center;
    padding: 1rem 1.25rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    position: relative;
    border-left: 4px solid;
    animation: slideIn 0.3s ease-out forwards;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.message i {
    margin-right: 0.75rem;
    font-size: var(--font-size-md);
}

.message span {
    flex: 1;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
}

.message .close-message {
    background: transparent;
    border: none;
    color: inherit;
    opacity: 0.7;
    cursor: pointer;
    transition: opacity 0.2s ease;
}

.message .close-message:hover {
    opacity: 1;
}

.message.success {
    background-color: #e6f7ef;
    color: var(--success-color);
    border-left-color: var(--success-color);
}

.message.error {
    background-color: #fee5e5;
    color: var(--danger-color);
    border-left-color: var(--danger-color);
}

.message.warning {
    background-color: #fff4de;
    color: var(--warning-color);
    border-left-color: var(--warning-color);
}

.message.info {
    background-color: #e6f0fd;
    color: var(--info-color);
    border-left-color: var(--info-color);
}

/* Modal Styles */
.modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(15, 23, 42, 0.65);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    backdrop-filter: blur(3px);
}

.modal-backdrop.active {
    opacity: 1;
    visibility: visible;
}

.modal-container {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-lg);
    transform: scale(0.95);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
}

.modal-backdrop.active .modal-container {
    transform: scale(1);
    opacity: 1;
}

.modal-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.modal-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-dark);
}

.modal-close {
    background: transparent;
    border: none;
    color: var(--text-medium);
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.modal-close:hover {
    background-color: var(--bg-color);
    color: var(--text-dark);
}

.modal-body {
    padding: 1.5rem;
}

.modal-footer {
    padding: 1.25rem 1.5rem;
    border-top: 1px solid var(--border-light);
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
}

/* Form Styles */
.form-group {
    margin-bottom: 1.25rem;
}

.form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--text-dark);
}

.form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: var(--font-size-sm);
    border: 1px solid var(--border-medium);
    border-radius: var(--radius-md);
    background-color: white;
    color: var(--text-dark);
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(59, 91, 217, 0.1);
}

.form-control::placeholder {
    color: var(--text-light);
}

.form-hint {
    display: block;
    margin-top: 0.5rem;
    font-size: var(--font-size-xs);
    color: var(--text-medium);
}

.form-error {
    display: block;
    margin-top: 0.5rem;
    font-size: var(--font-size-xs);
    color: var(--danger-color);
}

/* No data messages */
.no-data-message, .no-documents, .no-results {
    text-align: center;
    padding: 3rem 1rem;
    background: var(--card-bg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
}

.no-data-icon, .no-results-icon {
    font-size: 3rem;
    color: var(--text-light);
    margin-bottom: 1rem;
}

.no-data-message a, .no-documents a, .no-results a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
}

/* Responsive styles */
@media (max-width: 1024px) {
    .dashboard-container {
        grid-template-columns: 240px 1fr;
    }
    
    .dashboard-sidebar {
        width: 240px;
    }
    
    .dashboard-content-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .dashboard-container {
        grid-template-columns: 1fr;
    }
    
    .dashboard-sidebar {
        transform: translateX(-100%);
    }
    
    .dashboard-main {
        grid-column: 1;
    }
    
    .sidebar-collapsed .dashboard-sidebar {
        transform: translateX(0);
    }
    
    .search-form .form-row {
        flex-direction: column;
        gap: 1rem;
    }
    
    .form-group.half {
        flex: 1;
    }
}

@media (max-width: 480px) {
    .dashboard-stats {
        grid-template-columns: 1fr;
    }
    
    .dashboard-section-header {
        margin-bottom: 1.5rem;
    }
    
    .dashboard-view {
        padding: 1.5rem;
    }
    
    .header-search {
        max-width: none;
    }
    
    .search-input-wrapper button {
        padding: 0.75rem 1rem;
    }
}

