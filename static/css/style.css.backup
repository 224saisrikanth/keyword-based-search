    font-weight: var(--font-weight-medium);
    color: var(--text-dark);
    margin: 0;
    max-width: 280px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.result-meta {
    font-size: var(--font-size-xs);
    color: var(--text-medium);
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.result-page-info {
    background-color: var(--primary-color);
    color: white;
    padding: 0.1rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
}

.result-actions {
    display: flex;
    gap: 0.25rem;
}

.result-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 26px;
    height: 26px;
    border-radius: var(--radius-md);
    color: var(--primary-color);
    background-color: var(--bg-color);
    border: 1px solid var(--border-light);
    transition: all 0.2s ease;
}

.result-action:hover {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.result-content {
    padding: 0.5rem 1rem;
}

.result-matches {
    font-size: var(--font-size-xs);
    color: var(--text-dark);
    line-height: var(--line-height-normal);
    max-height: 150px;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--primary-light) transparent;
    padding-right: 0.5rem;
}

.result-match {
    margin-bottom: 0.5rem;
    padding: 0.5rem;
    background-color: rgba(240, 244, 255, 0.7);
    border-radius: var(--radius-md);
    border-left: 3px solid;
    border-image: var(--primary-gradient);
    border-image-slice: 1;
    box-shadow: 0 2px 4px rgba(74, 108, 247, 0.1);
    transition: all 0.2s ease;
}

.result-match:hover {
    background-color: rgba(240, 244, 255, 0.9);
    box-shadow: 0 4px 8px rgba(74, 108, 247, 0.15);
}

/* Highlight text with animation */
.match-highlight {
    position: relative;
    background: rgba(254, 67, 101, 0.15);
    padding: 0.15rem 0.35rem;
    border-radius: 4px;
    font-weight: var(--font-weight-semibold);
    color: var(--accent-dark);
    transition: all 0.2s ease;
}

.match-highlight:hover {
    background: rgba(254, 67, 101, 0.25);
}

/* Elegant View link */
.result-view-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    margin-top: 0.75rem;
    color: var(--primary-color);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    padding: 0.4rem 0.75rem;
    background: rgba(74, 108, 247, 0.05);
    border-radius: 20px;
    transition: all 0.2s ease;
}

.result-view-link:hover {
    background: rgba(74, 108, 247, 0.1);
    transform: translateX(2px);
    text-decoration: none;
}

.result-view-link i {
    font-size: 0.7rem;
    transition: transform 0.2s ease;
}

.result-view-link:hover i {
    transform: translateX(2px);
}

/* Custom scrollbar styling */
.result-matches::-webkit-scrollbar {
    width: 5px;
}

.result-matches::-webkit-scrollbar-track {
    background: transparent;
}

.result-matches::-webkit-scrollbar-thumb {
    background-color: rgba(74, 108, 247, 0.3);
    border-radius: 10px;
}

.result-matches::-webkit-scrollbar-thumb:hover {
    background-color: rgba(74, 108, 247, 0.5);
}

/* Stylish pagination */
.pagination {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
    gap: 0.4rem;
}

.pagination-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 36px;
    height: 36px;
    padding: 0 0.6rem;
    border-radius: 50%;
    font-size: var(--font-size-sm);
    color: var(--text-medium);
    border: 1px solid rgba(74, 108, 247, 0.2);
    background-color: white;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
}

.pagination-item:hover {
    color: var(--primary-color);
    border-color: var(--primary-light);
    box-shadow: 0 4px 8px rgba(74, 108, 247, 0.15);
    transform: translateY(-2px);
}

.pagination-item.active {
    background: var(--primary-gradient);
    color: white;
    border-color: transparent;
    box-shadow: 0 4px 8px rgba(74, 108, 247, 0.25);
}

/* Beautiful animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.result-card {
    animation: fadeInUp 0.5s cubic-bezier(0.25, 0.8, 0.25, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
}

/* Media queries for responsiveness */
@media (max-width: 992px) {
    .results-list {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
}

@media (max-width: 768px) {
    .results-list {
        grid-template-columns: 1fr;
    }
    
    .result-title h3 {
        max-width: 200px;
    }
}

@media (max-width: 576px) {
    .search-header {
        padding: 1rem;
    }
    
    .result-title h3 {
        max-width: 180px;
    }
}

/* Premium Search Results Styling */
:root {
    /* Luxury color palette */
    --luxury-primary: #4A6CF7;
    --luxury-secondary: #3F51B5;
    --luxury-accent: #FF3366;
    --luxury-dark: #192339;
    --luxury-light: #f8faff;
    --luxury-gradient: linear-gradient(135deg, #4A6CF7, #3F51B5);
    --luxury-card-bg: rgba(255, 255, 255, 0.95);
    
    /* Glass effect variables */
    --glass-blur: blur(12px);
    --glass-bg: rgba(255, 255, 255, 0.8);
    --glass-border: rgba(255, 255, 255, 0.2);
    
    /* Premium shadows */
    --premium-shadow-sm: 0 4px 12px rgba(25, 35, 57, 0.06);
    --premium-shadow-md: 0 8px 24px rgba(25, 35, 57, 0.08);
    --premium-shadow-lg: 0 12px 32px rgba(25, 35, 57, 0.1);
    --premium-shadow-highlight: 0 0 20px rgba(74, 108, 247, 0.2);
}

/* Search results page layout */
.dashboard-view.active-view {
    background: linear-gradient(135deg, #f8faff, #eef2ff);
    min-height: calc(100vh - 70px);
    position: relative;
    overflow: hidden;
}

.dashboard-view.active-view::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(74, 108, 247, 0.03) 0%, rgba(63, 81, 181, 0.01) 50%, transparent 70%);
    z-index: 0;
    animation: pulse 15s infinite alternate ease-in-out;
}

@keyframes pulse {
    0% {
        opacity: 0.5;
        transform: scale(1);
    }
    100% {
        opacity: 0.8;
        transform: scale(1.05);
    }
}

.dashboard-section-header {
    position: relative;
    z-index: 1;
}

/* Ultra-premium search header */
.search-header {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
    border-radius: 18px;
    padding: 1.75rem 2rem;
    margin-bottom: 2rem;
    box-shadow: var(--premium-shadow-md);
    position: relative;
    z-index: 1;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.search-header:hover {
    transform: translateY(-2px);
    box-shadow: var(--premium-shadow-lg);
}

.search-info h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--luxury-dark);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.search-info h3::before {
    content: '';
    display: block;
    width: 4px;
    height: 24px;
    background: var(--luxury-gradient);
    border-radius: 2px;
}

.search-query {
    background: var(--luxury-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
    position: relative;
    padding-bottom: 2px;
}

.search-query::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--luxury-gradient);
    border-radius: 1px;
}

.results-count {
    font-size: 0.9rem;
    color: var(--text-medium);
    display: flex;
    align-items: center;
    font-weight: 500;
}

/* Compact, premium result cards with glass effect */
.results-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.25rem;
    position: relative;
    z-index: 1;
}

.result-card {
    background: var(--luxury-card-bg);
    border-radius: 14px;
    overflow: hidden;
    box-shadow: var(--premium-shadow-sm);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
    transform: translateY(0) scale(1);
}

.result-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--luxury-gradient);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.result-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: var(--premium-shadow-lg), 0 0 0 1px rgba(74, 108, 247, 0.1);
    z-index: 2;
}

.result-card:hover::before {
    opacity: 1;
}

/* Elegant file info header */
.result-header {
    padding: 1rem 1.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(248, 250, 255, 0.7);
    border-bottom: 1px solid rgba(74, 108, 247, 0.1);
}

.result-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    min-width: 0;
}

.result-title-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: var(--luxury-gradient);
    color: white;
    font-size: 1rem;
    box-shadow: 0 4px 10px rgba(74, 108, 247, 0.2);
    flex-shrink: 0;
}

.result-title h3 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--luxury-dark);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* Elegant page indicator badge */
.result-page-badge {
    background: var(--luxury-gradient);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    box-shadow: 0 3px 8px rgba(74, 108, 247, 0.2);
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.result-page-badge:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 12px rgba(74, 108, 247, 0.3);
}

.result-page-badge i {
    font-size: 0.7rem;
}

/* Sleek content area */
.result-content {
    padding: 1rem 1.25rem 1.25rem;
}

.result-matches {
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--text-dark);
    max-height: 120px;
    overflow-y: auto;
    margin-bottom: 0.75rem;
    scrollbar-width: thin;
    scrollbar-color: rgba(74, 108, 247, 0.2) transparent;
}

.result-match {
    padding: 0.75rem;
    margin-bottom: 0.5rem;
    border-radius: 10px;
    background: rgba(248, 250, 255, 0.8);
    border-left: 3px solid;
    border-image: var(--luxury-gradient);
    border-image-slice: 1;
    transition: all 0.2s ease;
}

.result-match:hover {
    background: rgba(248, 250, 255, 0.95);
    box-shadow: var(--premium-shadow-sm);
}

/* Premium highlight styling */
.match-highlight {
    position: relative;
    display: inline-block;
    background: rgba(255, 51, 102, 0.12);
    padding: 0.15rem 0.5rem;
    margin: 0 0.1rem;
    border-radius: 4px;
    color: #FF3366;
    font-weight: 600;
    transition: all 0.2s ease;
    box-decoration-break: clone;
    -webkit-box-decoration-break: clone;
}

.match-highlight::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: #FF3366;
    opacity: 0.3;
}

.match-highlight:hover {
    background: rgba(255, 51, 102, 0.18);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(255, 51, 102, 0.2);
}

/* Elegant action button */
.result-actions {
    display: flex;
    justify-content: flex-end;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(74, 108, 247, 0.08);
    margin-top: 0.5rem;
}

.result-view-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--luxury-primary);
    background: rgba(74, 108, 247, 0.05);
    border: 1px solid rgba(74, 108, 247, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
}

.result-view-btn:hover {
    background: var(--luxury-gradient);
    color: white;
    border-color: transparent;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(74, 108, 247, 0.25);
}

.result-view-btn i {
    transition: transform 0.2s ease;
}

.result-view-btn:hover i {
    transform: translateX(3px);
}

/* Custom scrollbar styling */
.result-matches::-webkit-scrollbar {
    width: 4px;
}

.result-matches::-webkit-scrollbar-track {
    background: transparent;
}

.result-matches::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #4A6CF7, #3F51B5);
    border-radius: 4px;
}

/* Responsive adjustments */
@media (max-width: 1200px) {
    .results-list {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
}

@media (max-width: 768px) {
    .results-list {
        grid-template-columns: 1fr;
    }
    
    .search-header {
        padding: 1.25rem;
    }
}

/* Animations for results */
@keyframes fadeSlideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.result-card {
    animation: fadeSlideUp 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    opacity: 0;
} 